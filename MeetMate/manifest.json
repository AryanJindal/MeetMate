{
    "name" : "MeetMate",
    "version" : "1.0.0",
    "description": "An easy to use browser extension for your everyday online meeting needs.",

    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "logo2.png"
        
    },

    "icons": {"128": "logo2_128.png"},

    "manifest_version" : 2,

    "permissions" : ["tabs","audioCapture","storage","videoCapture","desktopCapture"],

    "content_scripts" :[
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["script.js", "scrdr.js", "sp2txt.js", "PDFgen.js"]
        }
    ]
}
